import { LineEdit, AboutSlint, VerticalBox, Button, GridBox, GroupBox, HorizontalBox, StandardButton, StandardTableView } from "std-widgets.slint";
import { Page1 } from "page1.slint";

export component Page3 inherits Window {
    in property <string> storage-name: "Unknown Name";
    in property <string> storage-total: "Unknown Amount";
    in property <string> storage-used: "Unknown Amount";
    in property <string> storage-free: "Unknown Amount";

    VerticalBox {
        alignment: LayoutAlignment.start;
        HorizontalBox {
            Text {
                text: "Storage Information";
                font-size: 20px;
                font-weight: 800;
            }
        }
        VerticalLayout {
            HorizontalBox {
                alignment: start;
                Text {
                    width: 80px;
                    text: "Drive Name: ";
                    horizontal-alignment: left;
                }
                Text {
                    text <=> root.storage-name;
                    horizontal-alignment: right;
                }
            }
            HorizontalBox {
                alignment: start;
                Text {
                    width: 80px;
                    text: "Total Storage: ";
                    horizontal-alignment: left;
                }
                Text {
                    text <=> root.storage-total;
                    horizontal-alignment: right;
                }
            }
            HorizontalBox {
                alignment: start;
                Text {
                    width: 80px;
                    text: "Used Storage: ";
                    horizontal-alignment: left;
                }
                Text {
                    text <=> root.storage-used;
                    horizontal-alignment: right;
                }
            }
            HorizontalBox {
                alignment: start;
                Text {
                    width: 80px;
                    text: "Free Storage: ";
                    horizontal-alignment: left;
                }
                Text {
                    text <=> root.storage-free;
                    horizontal-alignment: right;
                }
            }
        }
    }
}